<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kalkulator_ayam_menghitung_pendapatan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Pakan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pakan_harian_amp_biaya"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etJumlahAyam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/jumlah_ayam"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etPakanPerEkor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rata_rata_pakan_per_ekor_kg"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etHargaPakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/harga_pakan_per_kg"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHitungPakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hitung_pakan_amp_biaya"
            style="@style/TextColorBT"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvHasilPakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hasil_kebutuhan_pakan_amp_biaya_akan_tampil_di_sini"
            android:layout_marginTop="8dp"/>

        <!-- Telur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produksi_telur_ayam_petelur"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etJumlahAyamBetina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/jumlah_ayam_betina"
            android:inputType="number"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etPersenProduksiTelur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/produksi_harian"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etHargaTelur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/harga_telur_per_butir"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHitungTelur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hitung_produksi_telur"
            style="@style/TextColorBT"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvHasilTelur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hasil_produksi_telur_amp_pendapatan_akan_tampil_di_sini"
            android:layout_marginTop="8dp"/>

        <!-- Panen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bobot_panen_ayam_pedaging"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etBobotPanen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rata_rata_bobot_panen_kg"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etHargaJualKg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/harga_jual_per_kg"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHitungPanen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hitung_bobot_amp_pendapatan_panen"
            style="@style/TextColorBT"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvHasilPanen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hasil_bobot_amp_pendapatan_panen_akan_tampil_di_sini"
            android:layout_marginTop="8dp"/>

        <!-- Mortalitas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tingkat_mortalitas"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etMortalitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/persentase_mortalitas"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnHitungMortalitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hitung_estimasi_ayam_hidup"
            style="@style/TextColorBT"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvHasilMortalitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimasi_ayam_hidup_amp_dampak_pendapatan_akan_tampil_di_sini"
            android:layout_marginTop="8dp"/>

        <!-- Rekap -->
        <TextView
            android:id="@+id/tvRekap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rekap_laporan"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLaporan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:overScrollMode="never"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSimpanRingkasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simpan_ringkasan_laporan"
            style="@style/TextColorBT"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
